
// Delta Sigma Converter

circuit dsdac16
{
	input din<16>;
	instrin zi_off;
	output dout;

	reg_wr sigma<18>; // +2
	sel delta<18>; // +2
	reg_wr din_reg<16>;

	if(zi_off) din_reg := din; // ƒ[ƒ‘}“üOFF
	else{
		reg_wr sw;
		sw := ^sw;
		if(sw) din_reg := 0;
		else din_reg := din;
	}

	delta = sigma<17> || sigma<17> || din_reg;
	sigma += delta;
	dout = sigma<17>;
}
